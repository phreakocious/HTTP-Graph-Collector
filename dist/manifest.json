{
    "manifest_version": 3,
    "name": "HTTP Graph Collector",
    "version": "0.6",
    "description": "Builds a graph from your HTTP traffic. View live at nullphase.net/hg or POST to a localhost REST API. All data stays local.",
    "background":
    {
        "service_worker": "httpgraph.js"
    },
    "permissions":
    [
        "storage",
        "webRequest",
        "tabs"
    ],
    "host_permissions":
    [
        "http://*/*",
        "https://*/*",
        "http://127.0.0.1/*"
    ],
    "action":
    {
        "default_title": "HTTP Graph Collector",
        "default_popup": "popup/popup.html",
        "default_icon":
        {
            "48": "httpgraph-48x48.png"
        }
    },
    "externally_connectable":
    {
        "matches":
        [
            "https://nullphase.net/*",
            "http://localhost/*",
            "http://127.0.0.1/*"
        ]
    },
    "icons":
    {
        "48": "httpgraph-48x48.png",
        "128": "httpgraph-128x128.png"
    }
}